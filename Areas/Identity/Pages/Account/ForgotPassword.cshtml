@page
@model ForgotPasswordModel
@{
    Layout = null;
    ViewData["Title"] = "Forgot your password?";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Ben Wang">
    <link rel="icon" href="/docs/4.0/assets/img/favicons/favicon.ico">

    <title>@ViewData["Title"] - MineCraft Bedrock Server Manager</title>

    <!-- Bootstrap core CSS -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/css/login.css" rel="stylesheet">

</head>

<body class="text-center">
    <form class="form-signin" id="account" method="post">
        <img class="mb-4" src="~/pic/mcicon.png" alt="" width="100" height="100">
        <h1 class="h3 mb-3 font-weight-normal">Forgot Password</h1>
        <div asp-validation-summary="All" class="text-danger"></div>
        <label asp-for="Input.Email" class="sr-only">Email address</label>
        <input type="forgot-email" asp-for="Input.Email" class="form-control" placeholder="Email address" required autofocus>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
        <p></p>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
        <div class="form-group">
            <p></p>
            <p>
                <a asp-area="Identity" asp-page="/Account/Login">Log in</a>
            </p>
        </div>
        <p class="mt-5 mb-3 text-muted">&copy; 2020 - MC Bedrock Server Manager</p>
    </form>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>